#loadurl {
	    width: 100%;
    height: 100%;
}
#conter-div-info{
	    width: calc(100% - 2.32rem);
    height: 100%;
    float: right;
}
#content_box{
	width:100%;
	height:100%;
	 position: relative;
}
#content_box .layui-tab{
	    width: 4.6rem;
    height: 2.46rem;
    background: rgba(255,255,255,1);
    box-shadow: 0px 0.01rem 0px 0px rgba(198,198,198,0.84);
    position: absolute;
    left: 0;
    bottom: 1.2rem;
}
#content_box .right-box{
	    position: absolute;
    right: 0;
    top: 0;
    width: 2.48rem;
    height: 100%;
    background: rgba(255,255,255,1);
    box-shadow: 0px 0.03rem 0px 0px rgba(198,198,198,0.84);
      display: flex;
    flex-direction: column;
}
.right-box h4{
    width: 100%;
    height: 0.37rem;
    color: #fff;
    text-align: center;
    font-size: 0.18rem;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(255,255,255,1);
    background: rgba(0,149,231,1);
    box-shadow: 0px 0.01rem 0px 0px rgba(198,198,198,0.84);
}
.input-box {
	  width: 100%;
	height:0.35rem;
	background:rgba(255,255,255,1);
}
.input-box select{
	     border: 0.01rem solid rgba(190, 226, 244, 1);
    border-radius: 0.03rem 0.03rem 0.03rem 0.03rem;
    width: 1.71rem;
    height: 100%;
    padding: 0;
    line-height: normal;
    float: left;
    margin: 0 0.1rem;
    padding-left: 0.05rem;
    /*�ܹؼ�����Ĭ�ϵ�selectѡ�����ʽ���*/
appearance:none;
-moz-appearance:none;
-webkit-appearance:none;
}
/*���ie��Ĭ��ѡ�����ʽ���������������ͷ*/
select::-ms-expand { display: none; }
.input-box button{
	    width: 0.52rem;
    height:100%;
    background: rgba(255,180,74,1);
    border-radius: 0.04rem;
    border: 0;
    color: #fff;
    font-size: 0.18rem;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(255,255,255,1);
}
#content_box .right-box ul{
	    margin-top: 0.1rem;
    flex: 1;
}
#content_box .right-box ul li{
	   height: 0.71rem;
	   color:#333;
        display: flex;
    justify-content: space-around;
    align-items: center;
  cursor: pointer;
}
#content_box .right-box ul li> span{
	    width: 0.16rem;
    height: 0.2rem;
    display: inline-block;
    background-image: url(site.png);
}
#content_box .right-box ul li > div p:nth-child(1){
	    font-size: 0.16rem;
}
#content_box .right-box ul li.selected{
  background: rgba(0, 149, 231, .1);
}
#content_box .layui-tab-content {
    padding: 0px;
    height: 2.14rem;
    overflow: hidden;
}

#content_box .layui-tab .layui-tab-title{
	font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(88,95,98,1);
    width: 100%!important;
    height: 0.36rem !important;
    line-height: 0.36rem !important;
    font-size: 0.16rem;
    display: flex;
    justify-content: space-around;
}

#content_box .layui-tab-title > li{
	    height: 0.34rem !important;
    line-height: 0.34rem !important;
    font-size: 0.16rem;
    background-color: #fff !important;
    padding: 0;
    width: auto!important;
}

#content_box .layui-tab-item.layui-show,.layui-this{
	color:rgba(0,149,231,1);
}

#content_box .layui-tab-title .layui-this:after {
    display: none;
}


#content_box .layui-tab-item li{
	color:rgba(88,95,98,1);
	     width: 100%;
    height: 0.3rem;
    line-height: 0.3rem;
    font-size: 0.14rem;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    padding: 0 0.2rem;
}
#content_box .layui-show ul > li{
	color:rgba(0,149,231,1);
}
 #info {
    padding: .75rem 1.25rem;
    margin-bottom: 1rem;
    border-radius: .25rem;
    position: fixed;
    top: -7rem;
    left: -5rem;
    background-color: white;
    width: auto;
    min-width: 11rem;
    border-width: 0;
    right: 1rem;
    padding-right: 0;
    box-shadow: 0 0.02rem 0.06rem 0 rgba(114, 124, 245, .5);
}
#container .amap-marker-label{
	border:0;
}