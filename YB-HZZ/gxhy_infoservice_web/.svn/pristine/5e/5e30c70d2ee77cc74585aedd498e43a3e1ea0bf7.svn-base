<!--  发布消息-->
<div class="modal fade" id="modal_showRelease" tabindex="-1" role="dialog" aria-labelledby="myModalLabel_showRelease" aria-hidden="true">
    <div class="modal-dialog">
       <div class="modal-content" style="width:800px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel_showRelease">消息&nbsp;——&nbsp;<span id="title_type"></span></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="form_showRelease">
                    <div class="form-group">
                     	<label for="tbxContent" class="col-sm-2 control-label required">信息类型：</label>
						<div class="col-sm-10">
							<select class="form-control" name="msgType"  id="msgType"  form="form_showRelease">	
							       <option disabled="" selected="" value="">请选择</option>
							       <option value="01">通知公告</option>
							       <option value="02">治水新闻</option>
							       <option value="03">新闻动态</option>									
						    </select>
						</div>
                    </div>
                    <div class="form-group">
						<label for="tbxContent" class="col-sm-2 control-label required">标题内容：</label>
						<div class="col-sm-10">
							<input id="msgTitle" class="form-control" name="msgTitle" form="form_showRelease"  datatype="CharLen" msg="标题字符长度不能超过60个" placeholder="请填写标题内容">
						</div>
                    </div>
                     <div class="form-group">
                        <label for="tbxContent" class="col-sm-2 control-label required">发送内容：</label>
						<div class="col-sm-10">	
						    <input  id="msgContent" class="form-control" name="msgContent" form="form_showRelease">										
						</div>
                    </div>               
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary add" form="form_showRelease" type="button" onclick="showRelease.submitForm(1)">
                    <span class="glyphicon glyphicon-saved"></span>&nbsp;保&nbsp;存
                </button>
                <button class="btn btn-primary return" type="button" data-dismiss="modal">
                    <span class="glyphicon glyphicon-log-out"></span>&nbsp;返&nbsp;回
                </button>
            </div>
        </div>
    </div>
</div>



<!-- 发布文件 -->
<div class="modal fade" id="modal_fileManage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel_fileManage" aria-hidden="true">
    <div class="modal-dialog">
       <div class="modal-content" style="width:900px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel_fileManage">文件信息&nbsp;——&nbsp;新增</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="form_fileManage">
                    <div class="form-group">
                        <label class="col-sm-2 control-label required">文件名称</label>
                        <div class="col-sm-4">
                            <input type="hidden" id="fileId" name="fileId" form="form_fileManage"  value="">
                            <input class="form-control" form="form_fileManage" name="fileName" id="fileName" type="text" data-val="true" data-val-required="文件名称不能为空！" placeholder="文件名称...">
                            <span data-valmsg-for="rvCd" data-valmsg-replace="true" class="error"></span>
                        </div>
                        <label class="col-sm-2 control-label">文号</label>
                        <div class="col-sm-4">
                             <input class="form-control" form="form_fileManage" name="fileSymbol" id="fileSymbol" type="text" placeholder="请输入文号">
                            
                        </div>
                    </div>
                    <div class="form-group">
                     	<label class="col-sm-2 control-label">文件类型</label>
						<div class="col-sm-4">
						     <select  name="fileType" id="fileType" class="form-control" form="form_fileManage"  placeholder="请选择文件类型" >
						     </select>
						</div>
                        <label class="col-sm-2 control-label">印发日期</label>
						<div class="col-sm-4">
							<input type="text" name="createTm" id="createTm" class="form-control" form="form_fileManage" placeholder="请选择印发日期" >
						</div>
                    </div>
                    <div class="form-group">
						<label class="col-sm-2 control-label">发文机构</label>
						<div class="col-sm-4">
							<input type="text" name="fileOrg" id="fileOrg" class="form-control" form="form_fileManage" placeholder="请输入发文机构" >
						</div>
						<label class="col-sm-2 control-label">归属类型</label>
						 <div class="col-sm-4">
						   <select  name="fileAttrType" id="fileAttrType" class="form-control" form="form_fileManage"  placeholder="请选择归属类型" >
						        <option value="">请选择</option>
						        <option value="01">综合类型</option>
						        <option value="02">河流</option>
						        <option value="03">湖泊</option>
					       </select>
					     </div>
                    </div>
                     <div class="form-group">
                        <label class="col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
	                      <input type="text" name="remark" id="remark" class="form-control" form="form_fileManage" placeholder="请输入备注"  >
                        </div>                       
                    </div>
                    <div class="form-group">
                           <label for="" class="col-sm-2 control-label">选择文件</label>
						   <div class="col-sm-10">
						      <input id="myFile" type="file" name="myFile" class="fileloading"  onchange="filefujianChange(this);">
						       <p class="help-block">支持Doc,Docx,Pdf,Xls,Xlsx格式，大小不超过2.0M</p>
						   </div>
						   <input type="hidden" name="user.logo" id="logo">
						  
                    </div>                  
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary add" form="form_fileManage" type="button" onclick="showRelease.submitForm(2)">
                    <span class="glyphicon glyphicon-saved "></span>&nbsp;保&nbsp;存
                </button>
                <button class="btn btn-primary return" type="button" data-dismiss="modal">
                    <span class="glyphicon glyphicon-log-out "></span>&nbsp;返&nbsp;回
                </button>
            </div>
        </div>
    </div>
</div>
<script src="showRelease/showRelease.js"  type="text/javascript" ></script>