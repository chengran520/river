	     <div class="layui-card">
	          <div class="layui-card-header">
	          		消息中心
	                <button type="button" class="btn btn-primary queryBtn_add btn-right"  onclick="showRelease.showModal(1,false)">
	                    <span class="glyphicon glyphicon-plus"></span>
	                    &nbsp;发&nbsp;布&nbsp;文&nbsp;件
	                </button>
                    <button type="button" class="btn btn-primary queryBtn_add btn-right" style="margin-right: 0.05rem;"  onclick="showRelease.showModal(1,true)">
                       <span class="glyphicon glyphicon-plus"></span>
                       &nbsp;发&nbsp;布&nbsp;消&nbsp;息
                    </button>
	          </div>
	        
	          <div class="layui-card-body" id="news">
